
<h1>Add Project</h1>

<%= form_for(@project) do |f| %>

    <div class="field">
      <%= f.label :title %> <br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :description %> <br />
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :goal %> <br />
      <%= f.number_field :goal , placeholder: "Please enter a dollar amount" %>
    </div>

    <div class="field">
      <%= f.label :start_date %> <br />
      <%= f.date_field :start_date %>
    </div>

    <div class="field">
      <%= f.label :end_date %> <br />
      <%= f.date_field :end_date %>
    </div>

    <h1> Add Rewards </h1>

    <div id="rewards">
      <%= f.fields_for :rewards do |reward| %>
        <%= render 'reward_fields', f: reward %>
      <% end %>
    </div>

    <div class="links">
      <%= link_to_add_association 'add reward', f, :rewards %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>
