
<div class="nested-fields">
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :amount_required %>
    <%= f.number_field :amount_required, placeholder: 'Please enter a dollar amount' %>
  </div>

  <%= link_to_remove_association "remove reward", f %>
</div>